<h1> Member Profile </h1>
<%= @member.name %> <br>

<h3> <%= @member.name %>'s Plants: </h3>
<% @member.plants.each do |plant| %>

<% plant_plot = plant.plot_id %>
<% plot_location = @plots.find_by(id: plant.plot.id) %>
<% garden_location = @gardens.find_by(id: plot_location.garden_id) %>

<%= link_to plant.name, plant_path(plant) %>  // Height: <%= plant.height %> inches // <%= link_to garden_location.name, garden_path(garden_location) %> <br>
<% end %>
